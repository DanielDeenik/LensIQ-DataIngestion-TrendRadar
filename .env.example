# LensIQ Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment (development, staging, production)
LENSIQ_ENV=development

# Database Configuration
LENSIQ_DATABASE_ADAPTER=mongodb
LENSIQ_DATABASE_NAME=lensiq_development
LENSIQ_DATABASE_URI=mongodb://localhost:27017/lensiq_development
LENSIQ_DATABASE_USERNAME=your_username
LENSIQ_DATABASE_PASSWORD=your_password
LENSIQ_DATABASE_SSL=false
LENSIQ_DATABASE_TIMEOUT=30
LENSIQ_DATABASE_POOL_SIZE=10

# Security Configuration (REQUIRED - Generate secure values)
LENSIQ_SECRET_KEY=your_secret_key_minimum_32_characters_long
LENSIQ_ENCRYPTION_KEY=your_encryption_key_minimum_32_characters_long
LENSIQ_JWT_SECRET=your_jwt_secret_minimum_32_characters_long
LENSIQ_API_KEY_HEADER=X-LensIQ-API-Key
LENSIQ_SESSION_TIMEOUT=3600
LENSIQ_MAX_LOGIN_ATTEMPTS=5
LENSIQ_PASSWORD_MIN_LENGTH=12
LENSIQ_ENABLE_2FA=true
LENSIQ_CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Storage Configuration
LENSIQ_STORAGE_BASE_PATH=./storage
LENSIQ_DATA_PATH=./storage/data
LENSIQ_MODEL_PATH=./storage/models
LENSIQ_LOG_PATH=./storage/logs
LENSIQ_CACHE_PATH=./storage/cache
LENSIQ_BACKUP_PATH=./storage/backups
LENSIQ_MAX_FILE_SIZE=104857600
LENSIQ_RETENTION_DAYS=365
LENSIQ_STORAGE_ENCRYPTION=true

# API Configuration
LENSIQ_API_BASE_URL=http://localhost:5000
LENSIQ_API_VERSION=v1
LENSIQ_RATE_LIMIT_MINUTE=1000
LENSIQ_RATE_LIMIT_HOUR=10000
LENSIQ_API_TIMEOUT=30
LENSIQ_API_MAX_RETRIES=3
LENSIQ_ENABLE_SWAGGER=true
LENSIQ_ENABLE_METRICS=true

# Machine Learning Configuration
LENSIQ_ML_MODEL_PATH=./storage/models
LENSIQ_ML_FEATURE_PATH=./storage/features
LENSIQ_ML_TRAINING_PATH=./storage/training
LENSIQ_ML_BATCH_SIZE=32
LENSIQ_ML_MAX_EPOCHS=100
LENSIQ_ML_LEARNING_RATE=0.001
LENSIQ_ML_VALIDATION_SPLIT=0.2
LENSIQ_ML_TEST_SPLIT=0.1
LENSIQ_ML_RANDOM_SEED=42
LENSIQ_ML_ENABLE_GPU=false
LENSIQ_ML_DISTRIBUTED=false

# Premium Data Sources
# Refinitiv
REFINITIV_API_KEY=your_refinitiv_api_key
REFINITIV_BASE_URL=https://api.refinitiv.com/esg/v1
REFINITIV_RATE_LIMIT=100
REFINITIV_TIMEOUT=30

# Bloomberg
BLOOMBERG_API_KEY=your_bloomberg_api_key
BLOOMBERG_BASE_URL=https://api.bloomberg.com/esg/v1
BLOOMBERG_RATE_LIMIT=50
BLOOMBERG_TIMEOUT=30

# MSCI
MSCI_API_KEY=your_msci_api_key
MSCI_BASE_URL=https://api.msci.com/esg/v1
MSCI_RATE_LIMIT=75
MSCI_TIMEOUT=30

# Sustainalytics
SUSTAINALYTICS_API_KEY=your_sustainalytics_api_key
SUSTAINALYTICS_BASE_URL=https://api.sustainalytics.com/esg/v1
SUSTAINALYTICS_RATE_LIMIT=60
SUSTAINALYTICS_TIMEOUT=30

# Vector Database (Pinecone)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=lensiq-development-vectors

# AI Services
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id

# News API
NEWS_API_KEY=your_news_api_key

# Monitoring & Logging
LENSIQ_LOG_LEVEL=DEBUG
LENSIQ_ENABLE_AUDIT_LOG=true
LENSIQ_AUDIT_LOG_PATH=./storage/logs/audit

# Performance
LENSIQ_CACHE_TTL=3600
LENSIQ_ENABLE_REDIS=false
LENSIQ_REDIS_URL=redis://localhost:6379/0

# Health Checks
LENSIQ_HEALTH_CHECK_INTERVAL=60
LENSIQ_HEALTH_CHECK_TIMEOUT=10
