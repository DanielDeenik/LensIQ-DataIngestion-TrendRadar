# ============================================
# LensIQ Data Ingestion & TrendRadar
# Environment Configuration Template
# ============================================

# DATABASE CONFIGURATION
DATABASE_ADAPTER=mongodb
LENSIQ_DATABASE_ADAPTER=mongodb
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=lensiq

# FLASK CONFIGURATION
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True
PORT=5050

# SOCIAL MEDIA API CREDENTIALS
# Reddit API - Get credentials at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=LensIQ/1.0

# Discord Bot - Get token at: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token

# LinkedIn (unofficial API)
LINKEDIN_EMAIL=your_linkedin_email
LINKEDIN_PASSWORD=your_linkedin_password

# AI & ML SERVICES
# OpenAI API - Get key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# FILE UPLOAD
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# LOGGING
LOG_LEVEL=INFO
LOG_FILE=app.log

# SECURITY
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# DATA INGESTION
USE_MOCK_DATA=True
REDDIT_SUBREDDITS=sustainability,environment,climatechange,ESG
REDDIT_POST_LIMIT=100
