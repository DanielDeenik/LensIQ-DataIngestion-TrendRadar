# LensIQ Production Environment Configuration
# DO NOT COMMIT THIS FILE TO VERSION CONTROL

# Environment
LENSIQ_ENV=production

# Database Configuration
LENSIQ_DATABASE_ADAPTER=mongodb
LENSIQ_DATABASE_NAME=lensiq_production
LENSIQ_DATABASE_URI=mongodb+srv://username:password@cluster.mongodb.net/lensiq_production?retryWrites=true&w=majority
LENSIQ_DATABASE_USERNAME=your_production_username
LENSIQ_DATABASE_PASSWORD=your_production_password
LENSIQ_DATABASE_SSL=true
LENSIQ_DATABASE_TIMEOUT=30
LENSIQ_DATABASE_POOL_SIZE=20

# Security Configuration (REQUIRED - Generate secure values)
LENSIQ_SECRET_KEY=your_production_secret_key_minimum_32_characters_long
LENSIQ_ENCRYPTION_KEY=your_production_encryption_key_minimum_32_characters_long
LENSIQ_JWT_SECRET=your_production_jwt_secret_minimum_32_characters_long
LENSIQ_API_KEY_HEADER=X-LensIQ-API-Key
LENSIQ_SESSION_TIMEOUT=3600
LENSIQ_MAX_LOGIN_ATTEMPTS=5
LENSIQ_PASSWORD_MIN_LENGTH=12
LENSIQ_ENABLE_2FA=true
LENSIQ_CORS_ORIGINS=https://app.lensiq.ai,https://dashboard.lensiq.ai

# Storage Configuration
LENSIQ_STORAGE_BASE_PATH=/app/storage
LENSIQ_DATA_PATH=/app/storage/data
LENSIQ_MODEL_PATH=/app/storage/models
LENSIQ_LOG_PATH=/app/storage/logs
LENSIQ_CACHE_PATH=/app/storage/cache
LENSIQ_BACKUP_PATH=/app/storage/backups
LENSIQ_MAX_FILE_SIZE=104857600
LENSIQ_RETENTION_DAYS=365
LENSIQ_STORAGE_ENCRYPTION=true

# API Configuration
LENSIQ_API_BASE_URL=https://api.lensiq.ai
LENSIQ_API_VERSION=v1
LENSIQ_RATE_LIMIT_MINUTE=1000
LENSIQ_RATE_LIMIT_HOUR=10000
LENSIQ_API_TIMEOUT=30
LENSIQ_API_MAX_RETRIES=3
LENSIQ_ENABLE_SWAGGER=false
LENSIQ_ENABLE_METRICS=true

# Machine Learning Configuration
LENSIQ_ML_MODEL_PATH=/app/storage/models
LENSIQ_ML_FEATURE_PATH=/app/storage/features
LENSIQ_ML_TRAINING_PATH=/app/storage/training
LENSIQ_ML_BATCH_SIZE=64
LENSIQ_ML_MAX_EPOCHS=100
LENSIQ_ML_LEARNING_RATE=0.001
LENSIQ_ML_VALIDATION_SPLIT=0.2
LENSIQ_ML_TEST_SPLIT=0.1
LENSIQ_ML_RANDOM_SEED=42
LENSIQ_ML_ENABLE_GPU=true
LENSIQ_ML_DISTRIBUTED=true

# Premium Data Sources (REQUIRED for production)
# Refinitiv
REFINITIV_API_KEY=your_refinitiv_api_key
REFINITIV_BASE_URL=https://api.refinitiv.com/esg/v1
REFINITIV_RATE_LIMIT=100
REFINITIV_TIMEOUT=30

# Bloomberg
BLOOMBERG_API_KEY=your_bloomberg_api_key
BLOOMBERG_BASE_URL=https://api.bloomberg.com/esg/v1
BLOOMBERG_RATE_LIMIT=50
BLOOMBERG_TIMEOUT=30

# MSCI
MSCI_API_KEY=your_msci_api_key
MSCI_BASE_URL=https://api.msci.com/esg/v1
MSCI_RATE_LIMIT=75
MSCI_TIMEOUT=30

# Sustainalytics
SUSTAINALYTICS_API_KEY=your_sustainalytics_api_key
SUSTAINALYTICS_BASE_URL=https://api.sustainalytics.com/esg/v1
SUSTAINALYTICS_RATE_LIMIT=60
SUSTAINALYTICS_TIMEOUT=30

# Vector Database (Pinecone)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=lensiq-production-vectors

# AI Services
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id

# News API
NEWS_API_KEY=your_news_api_key

# Monitoring & Logging
LENSIQ_LOG_LEVEL=INFO
LENSIQ_ENABLE_AUDIT_LOG=true
LENSIQ_AUDIT_LOG_PATH=/app/storage/logs/audit

# Performance
LENSIQ_CACHE_TTL=3600
LENSIQ_ENABLE_REDIS=true
LENSIQ_REDIS_URL=redis://redis:6379/0

# Health Checks
LENSIQ_HEALTH_CHECK_INTERVAL=60
LENSIQ_HEALTH_CHECK_TIMEOUT=10
